{
  "$schema": "https://json.schemastore.org/eslintrc",
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "es2022": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:eslint-plugin-node/recommended-module",
    "plugin:eslint-plugin-import/recommended",
    "plugin:eslint-plugin-import/typescript",
    "eslint-config-prettier"
  ],
  "plugins": ["eslint-plugin-node", "@projectsophon/eslint-plugin-typescript-enum", "eslint-plugin-import"],
  "rules": {
    "no-empty-pattern": "off",
    "node/no-missing-import": [
      "error",
      {
        "tryExtensions": [".ts", ".js", ".json", ".node"]
      }
    ],
    "@projectsophon/typescript-enum/no-enum": "error",
    "import/no-unresolved": ["error", { "ignore": ["^https:", "type-fest"] }],
    "import/no-relative-packages": "error",
    "import/no-extraneous-dependencies": [
      "error",
      {
        "optionalDependencies": false,
        "peerDependencies": false,
        "bundledDependencies": false
      }
    ]
  },
  "overrides": [
    {
      "files": ["test/**"],
      "env": {
        "mocha": true
      },
      "rules": {
        "max-len": "off",
        "max-statements": "off"
      }
    }
  ]
}
